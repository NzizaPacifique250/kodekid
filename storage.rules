rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User avatars
    match /avatars/{uid}/images/{file} {
      allow read: if true; // avatars are public
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Lesson assets (read-only)
    match /lessons/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
